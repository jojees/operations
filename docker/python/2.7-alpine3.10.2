FROM alpine:3.10.2
LABEL version="1.0" \
      description="Python2.7 base image used across various projects."
RUN apk add --no-cache --update \
      python && \
      python -m ensurepip && \
      rm -r /usr/lib/python*/ensurepip && \
      pip install --no-cache --upgrade pip setuptools wheel && \
      rm -rf /var/cache/apk/*
ENTRYPOINT [ "python" ]