FROM alpine:3.10.2
LABEL version="1.0" \
      description="Cookiecutter based on Python 3.7."
RUN apk add --update \
      python \
      python-dev \
      git \
      py-pip \
      g++ && \
      pip install cookiecutter && \
      apk del g++ py-pip  python-dev && \
      rm -rf /var/cache/apk/*
ENTRYPOINT [ "cookiecutter" ]

